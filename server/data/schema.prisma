datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

enum Role {
    PATIENT
    DOCTOR
    ADMIN
}

model User {
    guid                String    @id @default(uuid())
    email               String    @unique
    passwordHash        String
    role                Role
    createdAt           DateTime  @default(now())
    updatedAt           DateTime  @updatedAt
    lastLoginAt         DateTime?
    failedLoginAttempts Int       @default(0)

    // Relations
    patient Patient?
    doctor  Doctor?
}

model Doctor {
    guid         String @id @default(uuid())
    firstName    String
    lastName     String
    contactEmail String @unique
    location     String
    phoneNumber  String

    // Foreign Key to Specialization
    specializationGuid String
    specialization     Specialization @relation(fields: [specializationGuid], references: [guid])

    // Relation to User
    userGuid String @unique
    user     User   @relation(fields: [userGuid], references: [guid])
}

model Patient {
    guid        String   @id @default(uuid())
    firstName   String
    lastName    String
    phoneNumber String
    dateOfBirth DateTime
    street      String
    city        String
    postalCode  String

    // Relation to User
    userGuid String @unique
    user     User   @relation(fields: [userGuid], references: [guid])
}

model Specialization {
    guid String @id @default(uuid())
    name String @unique

    // Relations
    doctors Doctor[]
}
